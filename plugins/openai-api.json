{
  "$schema": "https://raw.githubusercontent.com/invoiceradar/plugins/main/schema.json",
  "id": "openai-api",
  "name": "OpenAI API",
  "description": "Get invoices from your OpenAI Platform/API",
  "homepage": "https://platform.openai.com",
  "configSchema": {
    "username": {
      "type": "string",
      "title": "Username",
      "required": false
    }
  },
  "checkAuth": [
    {
      "action": "navigate",
      "url": "https://platform.openai.com/account/billing/history"
    },
    {
      "action": "waitForElement",
      "selector": ".app-navigation"
    },
    {
      "action": "checkElementExists",
      "selector": ".app-navigation"
    }
  ],
  "startAuth": [
    {
      "action": "navigate",
      "url": "https://platform.openai.com/account/billing/history"
    },
    {
      "action": "waitForElement",
      "selector": ".page-body"
    },
    {
      "action": "click",
      "selector": ".page-body button"
    },
    {
      "action": "waitForElement",
      "selector": ".billing-subtext",
      "timeout": 120000
    }
  ],
  "getInvoices": [
    {
      "action": "navigate",
      "url": "https://platform.openai.com/account/billing/history"
    },
    {
      "action": "waitForElement",
      "selector": ".billing-history-table"
    },

    {
      "action": "extractAll",
      "selector": ".billing-history-table > tbody > tr",
      "fields": {
        "id": {
          "selector": "td:nth-child(1)"
        },
        "date": {
          "selector": "td:nth-child(4)"
        },
        "url": {
          "selector": "a",
          "attribute": "href"
        }
      },
      "forEach": [
        {
          "action": "getInvoiceFromStripeUrl",
          "url": "{{item.url}}"
        }
      ]
    }
  ]
}
